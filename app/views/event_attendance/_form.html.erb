<%= form_with model: event_attendance do |form| %>
  <%= form.hidden_field :event_id, value: event_attendance.event_id %>
  <%= form.hidden_field :user_id, value: event_attendance.user_id %>
  <%= form.hidden_field :attendance_status, value: :attending %>
  <%= form.submit event_attendance.form_submit_text %>
<% end %>