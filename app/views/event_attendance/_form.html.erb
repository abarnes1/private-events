<%= form_with model: @event_attendance, url: event_attendance_index_path do |form| %>
  <%= form.hidden_field :attended_event_id, value: event_id %>
  <%= form.hidden_field :attendee_id, value: current_user.id %>
  <%= form.hidden_field :invitation_status, value: '1' %>
  <%= form.submit 'Attend' %>
<% end %>