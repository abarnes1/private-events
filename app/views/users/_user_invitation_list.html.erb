<h2 class='stackable-md'><%= title %></h2>

<div class="event-card-container stackable-md">
  <% if invitations.count > 0 %>
    <% invitations.each do |invitation| %>
      <%= render partial: 'events/event_card_mini', locals: { event: invitation.event } %>
    <% end %>
  <% else %>
    No invitations :(
  <% end %>
</div>