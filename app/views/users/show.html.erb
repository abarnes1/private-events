<h1 class="stackable-md">My Events</h1>

<%= link_to new_event_path do %>
  <%= button_tag 'Create New Event', type: 'button', class: 'stackable-md bordered' %>
<% end %>

<%= render partial: 'events/event_card_list', locals: { title: 'Upcoming Events', events: @user.created_events.future } %>
<%= render partial: 'events/event_card_list', locals: { title: 'Past Events', events: @user.created_events.past } %>

<hr>

<h2>Pending Invitations: </h2>
<%= render 'user_invitation_list', invitations: @user.invitations.includes(:event) %>

<hr> 

<h2>My Event Attendance</h2>
<%= render 'user_attendance_list', events: @user.attended_events.future, title: 'Future Events' %>
<%= render 'user_attendance_list', events: @user.attended_events.past, title: 'Past Events' %>