<% if user_signed_in? %>
  <% if creator.id != current_user.id %>
    <% if event_attendance.attending? %>
      <%= button_to invitation_button_text(event_attendance), event_attendance, method: :delete, class: 'button-sm bordered' %>
    <% else %>
      <%= render 'event_attendance/form', event_attendance: event_attendance %>
    <% end %>
  <% end %>
<% elsif  %>
  Log in or sign up to attend!
<% end %>