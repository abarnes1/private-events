<div class="event-card-sm bordered">
  <%= link_to event_path(event) do %>
    <div class="event-card-sm-header">
      <%= event.name %><%= ' - (private)' if event.private? %>
    </div>

    <div class="event-card-date">
      <%= event.date %>
    </div>

    <div class="event-card-location">
      <%= event.location %>
    </div>
  <% end %>
</div>

